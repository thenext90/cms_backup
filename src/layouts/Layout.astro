---

import Header from '../components/Header.astro';
import BannerISODay from '../components/BannerISODay.astro';
import Footer from '../components/Footer.astro';
import MessageWidget from '../components/MessageWidget.astro';

export interface Props {
  title: string;
  description?: string;
}

const { title, description = "CMS Consultores - Tu socio estratégico en calidad y gestión empresarial" } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;600;700&family=Open+Sans:wght@400;600&display=swap" rel="stylesheet">
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "Organization",
        "name": "CMS Consultores",
        "url": "https://www.cmsconsultores.cl/",
        "logo": "https://www.cmsconsultores.cl/images/LOGO-cms.png",
        "description": "CMS Consultores - Tu socio estratégico en calidad y gestión empresarial"
      }
    </script>
  </head>
  <body class="font-[Montserrat,Open_Sans,sans-serif] bg-white">
    <Header />
    <BannerISODay />
    <slot />
    <Footer />
    <MessageWidget />
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  body {
    margin: 0;
    padding: 0;
    line-height: 1.6;
    background: #f8fafc;
    color: #1a2233;
  }
  :root {
    --accent-50: #e6f6ff;
    --accent-100: #b3e6ff;
    --accent-600: #1e90ff;
    --accent-700: #1565c0;
    --accent-800: #003366;
    --accent-900: #001a33;
    --gold: #ffd700;
    --lime: #bfff00;
  }
</style>